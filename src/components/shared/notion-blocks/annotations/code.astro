---
import type { RichText } from '~/interfaces/notion/block.interface';

interface Props {
	richText: RichText;
}

const { richText }: Props = Astro.props;
---

{
	richText.annotation.code ? (
		<code>
			<slot />
		</code>
	) : (
		<slot />
	)
}

<style>
	code {
		color: #eb5757;
		padding: 0.25rem;
	}
</style>
