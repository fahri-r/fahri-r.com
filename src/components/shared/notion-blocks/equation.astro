---
import katex from 'katex';
import type { Equation } from '~/interfaces/notion/block.interface';

interface Props {
	block: Equation;
}

const { block }: Props = Astro.props;
---

<div
	class="equation"
	set:html={katex.renderToString(block.expression, {
		throwOnError: false
	})}
/>

<style>
	.equation {
		text-align: center;
	}
</style>
