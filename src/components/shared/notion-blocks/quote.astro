---
import type { Heading1, Heading2, Heading3, Quote } from '~/interfaces/notion/block.interface';
import RichText from './rich-text.astro';
import NotionBlocks from './notion-block.astro';
import '~/styles/notion-color.css';

interface Props {
	block: Quote;
	headings: (Heading1 | Heading2 | Heading3)[];
}

const { block, headings }: Props = Astro.props;
---

<blockquote class={block.color.replaceAll('_', '-')}>
	{block.richTexts.map((richText) => <RichText {richText} />)}

	{block.hasChildren && block.children && <NotionBlocks blocks={block.children} {headings} />}
</blockquote>

<style>
	blockquote {
		margin: 0.6rem 0;
		padding: 0 0.9rem;
		border-left: 3px solid var(--fg);
		font-size: 1rem;
		line-height: 1.8rem;
	}
</style>
