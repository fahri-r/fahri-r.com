---
import type { ColumnList, Heading1, Heading2, Heading3 } from '~/interfaces/notion/block.interface';
import NotionBlock from './notion-block.astro';

export interface Props {
	block: ColumnList;
	headings: (Heading1 | Heading2 | Heading3)[];
}

const { block, headings }: Props = Astro.props;
---

<div class="column-list">
	{
		block.columns.map((column) => (
			<div>
				<NotionBlock blocks={column.children} headings={headings} />
			</div>
		))
	}
</div>

<style>
	.column-list {
		display: flex;
		width: 100%;
		margin: 1rem auto;
		gap: 0 1rem;
	}
	.column-list > div {
		flex: 1 1 180px;
		width: 180px;
	}
	@media (max-width: 640px) {
		.column-list {
			display: block;
		}
		.column-list > div {
			width: 100%;
		}
	}
</style>
