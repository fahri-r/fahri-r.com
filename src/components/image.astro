---
import { Image as AstroImage } from 'astro:assets';

const { src, alt = 'Blog Image', class: className } = Astro.props;

let images: any;
if (src.includes('projects')) {
	images = import.meta.glob<{ default: ImageMetadata }>('src/assets/projects/*.{jpeg,jpg,png,gif}');
} else {
	images = import.meta.glob<{ default: ImageMetadata }>('src/assets/blog/*.{jpeg,jpg,png,gif}');
}

if (!images[src]) throw new Error(`"${src}" does not exist in glob`);

const imgType = src.split('.').pop();
---

{
	imgType === 'bmp' ? (
		<img {src} {alt} class={className} />
	) : (
		<AstroImage src={images[src]()} {alt} class={className} />
	)
}
