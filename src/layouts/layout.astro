---
import '~/styles/app.css';

import { SITE } from '~/constants/global';
import Head from '~/components/main/head.astro';
import Footer from '~/components/main/footer.astro';
import Sidebar from '~/components/main/sidebar.astro';
import { cn } from '~/lib/utils';
interface Props {
	className?: string;
}

const { className } = Astro.props;
---

<!doctype html>
<html class="flex justify-center scheme-light-dark" lang={SITE.lang ?? 'en'}>
	<Head>
		<slot name="head" />
	</Head>
	<body class={"bg-background text-foreground relative flex max-w-7xl"}>
		<header class="bg-background/50 sticky top-0 z-50 divide-y backdrop-blur-sm xl:divide-none">
			<slot name="subposts-navigation" />
			<slot name="table-of-contents" />
		</header>

		<Sidebar />
		<main class="flex min-h-screen w-full flex-col justify-between border-l">
			<div class={cn('w-full h-full items-center justify-center px-10 py-12', className)}>
				<slot />
			</div>
			<Footer />
		</main>
	</body>
</html>
